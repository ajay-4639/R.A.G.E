# RAG OS Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# LLM API Keys
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# ===========================================
# Embedding Model API Keys
# ===========================================
VOYAGE_API_KEY=your-voyage-api-key
JINA_API_KEY=your-jina-api-key

# ===========================================
# Vector Database
# ===========================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
# Or use Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# RAG OS Configuration
# ===========================================
RAG_OS_ENV=development
RAG_OS_LOG_LEVEL=INFO
RAG_OS_DATA_DIR=./data
RAG_OS_INDEX_DIR=./indexes

# Rate Limiting
RAG_OS_RATE_LIMIT_ENABLED=true
RAG_OS_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security
RAG_OS_INPUT_VALIDATION_ENABLED=true
RAG_OS_MAX_QUERY_LENGTH=10000

# ===========================================
# API Server
# ===========================================
RAG_OS_API_HOST=0.0.0.0
RAG_OS_API_PORT=8000
RAG_OS_API_WORKERS=4
RAG_OS_API_CORS_ORIGINS=*

# ===========================================
# UI
# ===========================================
RAG_OS_API_URL=http://localhost:8000
STREAMLIT_SERVER_PORT=8501

# ===========================================
# Observability
# ===========================================
RAG_OS_TRACING_ENABLED=true
RAG_OS_METRICS_ENABLED=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
